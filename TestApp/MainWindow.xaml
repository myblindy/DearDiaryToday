<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestApp"
        mc:Ignorable="d"
        Loaded="WindowLoaded"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="151,102,0,0" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="339,281,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="231,236,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="595,67,0,0" VerticalAlignment="Top"/>
        <Rectangle HorizontalAlignment="Left" Height="136" Margin="400,142,0,0" Stroke="Black" VerticalAlignment="Top" Width="266"/>
        <TextBlock HorizontalAlignment="Left" Margin="294,157,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

        <CheckBox x:Name="AnimateCheckBox" Content="Animate" HorizontalAlignment="Left" Margin="98,338,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <Rectangle x:Name="Bouncer" HorizontalAlignment="Left" Height="30" Margin="179,210,0,0" VerticalAlignment="Top" Width="30"
                   Visibility="{Binding ElementName=AnimateCheckBox, Path=IsChecked, Converter={StaticResource BooleanToVisibilityConverter}}"
                   RenderTransformOrigin="0.5,0.5" Fill="BlueViolet" StrokeThickness="5" Stroke="DarkBlue">
            <Rectangle.RenderTransform>
                <RotateTransform x:Name="BouncerRotateTransform"/>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Button Content="Save" HorizontalAlignment="Left" Margin="400,94,0,0" VerticalAlignment="Top" Click="SaveClicked"/>

    </Grid>
</Window>
